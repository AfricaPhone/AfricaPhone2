rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Règle globale de lecture : Tout le monde peut lire les fichiers (images publiques).
    match /{allPaths=**} {
      allow read: if true;
    }

    // Règle pour les images de produits
    // CORRECTION : Le chemin est bien "product-images/" pour correspondre à la Cloud Function.
    match /product-images/{allPaths=**} {
      // Permet aux administrateurs de créer, mettre à jour ET supprimer des images.
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
