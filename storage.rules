rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Règle globale de lecture : Tout le monde peut lire les fichiers (images publiques).
    match /{allPaths=**} {
      allow read: if true;
    }

    // Règle pour les images de produits
    // Autorise les administrateurs à créer, mettre à jour et supprimer des images.
    // Le chemin est "product-images/" pour correspondre à la Cloud Function.
    match /product-images/{allPaths=**} {
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Règle pour les photos des candidats (inchangée)
    match /candidates_photos/{contestId}/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
